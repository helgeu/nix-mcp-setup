{
  "mcpServers": {
    "ado-mcp": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "AZURE_DEVOPS_PAT",
        "-e",
        "AZURE_DEVOPS_ORGANIZATION_URL",
        "ghcr.io/metorial/mcp-container--vortiago--mcp-azure-devops--mcp-azure-devops",
        "mcp-azure-devops"
      ],
      "env": {
        "AZURE_DEVOPS_PAT": "<your-pat-here>",
        "AZURE_DEVOPS_ORGANIZATION_URL": "https://dev.azure.com/<your-org>"
      }
    }
  }
}
